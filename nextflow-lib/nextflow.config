profiles {
    codon {
        env {
            NXF_OPTS = '-Xms500m -Xmx3584m'       // 500MB to 3.5GB
            NXF_DEBUG = '0'
        }
//        params {
//            SARS2_FA = '../data/NC_045512.2.fa'
//            SARS2_FA_FAI = '../data/NC_045512.2.fa.fai'
//            SECRETS = '../data/projects_accounts.csv'
//        }
        cleanup = true
        singularity {
            enabled = true
            cacheDir = '/hps/nobackup/cochrane/ena/users/analyser/nextflow/singularity'
        }
        process {
            executor = 'lsf'
            container = 'docker://quay.io/nextflow/bash'
            errorStrategy = 'ignore'
            queue = 'production'
        }
        executor {
            queueSize = '100'
            submitRateLimit = '2000 second'
            time = '1h'
//            clusterOptions =
//            perJobMemLimit =
//            queue = ''
        }
        tower {
            endpoint = 'https://tower.nf'
        }
    }
    gls {
        params {
            SARS2_FA = "gs://prj-int-dev-covid19-nf-gls/data/NC_045512.2.fa"
            SARS2_FA_FAI = "gs://prj-int-dev-covid19-nf-gls/data/NC_045512.2.fa.fai"
            SECRETS = "gs://prj-int-dev-covid19-nf-gls/data/projects_accounts.csv"
        }
        env {
            NXF_OPTS = '-Xms500m'       // '-Xmx500m'
            NXF_DEBUG = '0'
        }
        process {
            executor = 'google-lifesciences'
            container = 'quay.io/nextflow/bash'
            disk = '10 GB'
            errorStrategy = 'ignore'
        }
        executor {
            queueSize = '4'
            submitRateLimit = '2000 second'
        }
        google {
            lifeSciences {
                preemptible = 'true'
                //usePrivateAddress = 'false'     // public IP is required unless everything is on GCP
            }
            location = 'europe-west4'
            region = 'europe-west4'
            project = 'prj-int-dev-covid19-nf-gls'
//            enableRequesterPaysBuckets = 'false'
        }
        tower {
            endpoint = 'https://tower.nf'
        }
//        timeline {
//            enabled = 'true'
//            file = 'timeline.html'
//        }
//        dag {
//            enabled = 'true'
//            file = 'flowchart.png'
//        }
        // report {
        //     enabled = 'true'
        //     overwrite = 'true'
        // }
        // trace {
        //     enabled = 'true'
        //     overwrite = 'true'
        // }
    }
    slurm {
        cleanup = true
        singularity {
            enabled = true
            cacheDir = "/project/${PROJECT_ID}/singularity"
        }
        process {
            executor = 'slurm'
            process.clusterOptions = "--account=${PROJECT_ID} --cpus-per-task=16 --time=01:00:00"
            containerOptions = "-B /scratch/${PROJECT_ID}:/scratch/${PROJECT_ID},/project/${PROJECT_ID}:/project/${PROJECT_ID},/pfs/lustrep4/projappl/${PROJECT_ID}:/pfs/lustrep4/projappl/${PROJECT_ID},/pfs/lustrep4/scratch/${PROJECT_ID}:/pfs/lustrep4/scratch/${PROJECT_ID}"
            errorStrategy = 'ignore' // ignore,terminate
            queue = 'small'
            withName:map_to_reference {
                cpus = 16
           }
            withName:ena_analysis_submit {
//                container="/project/${PROJECT_ID}/singularity/ena-analysis-submitter_2.3.img"
                cpus = 16
            }
        }
        executor {
            queueSize = '40' //20,100
            submitRateLimit = '2000 second'
//          time = '1h'
        }
    }
}